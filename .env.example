# .env file for local development
# Copy this to .env and customize

# ============================================
# Environment
# ============================================
ENVIRONMENT=development

# ============================================
# Database
# ============================================
DATABASE_URL=postgres://postgres:postgres@postgres:5432/synthos?sslmode=disable
POSTGRES_DB=synthos
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ============================================
# Redis
# ============================================
REDIS_URL=redis:6379
REDIS_PASSWORD=redis_password

# ============================================
# MinIO (S3-compatible)
# ============================================
S3_BUCKET=synthos-datasets
S3_ENDPOINT=http://minio:9000
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# ============================================
# Security
# ============================================
JWT_SECRET=dev-secret-change-in-production-use-long-random-string
TLS_ENABLED=false

# ============================================
# Service Ports
# ============================================
API_GATEWAY_PORT=8080
JOB_ORCHESTRATOR_PORT=50052
DATA_SERVICE_PORT=50054
VALIDATION_ENGINE_PORT=50051
COLLAPSE_ENGINE_PORT=50053

# ============================================
# Service Addresses (gRPC)
# ============================================
JOB_ORCHESTRATOR_ADDR=job-orchestrator:50052
DATA_SERVICE_ADDR=data-service:50054
VALIDATION_ENGINE_ADDR=validation-engine:50051
COLLAPSE_ENGINE_ADDR=collapse-engine:50053

# ============================================
# ML Configuration
# ============================================
CUDA_VISIBLE_DEVICES=0,1,2,3
GPU_MEMORY_FRACTION=0.9
ENABLE_MIXED_PRECISION=true
TORCH_HOME=/app/models
TRANSFORMERS_CACHE=/app/models/transformers

# ============================================
# Feature Flags
# ============================================
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_CORS=true
ENABLE_PROGRESS_STREAMING=true

# ============================================
# Monitoring
# ============================================
PROMETHEUS_ENABLED=false
GRAFANA_ADMIN_PASSWORD=admin

# ============================================
# Signature Library
# ============================================
SIGNATURE_LIBRARY_PATH=/app/data/signatures
FAISS_INDEX_PATH=/app/data/signatures/faiss_index
